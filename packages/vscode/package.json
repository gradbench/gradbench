{
  "name": "adroit-vscode",
  "displayName": "Adroit",
  "version": "0.2.1",
  "publisher": "samestep",
  "description": "Language services for Adroit.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gradbench/gradbench",
    "directory": "packages/vscode"
  },
  "private": true,
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "adroit",
        "aliases": [
          "Adroit",
          "adroit"
        ],
        "extensions": [
          ".adroit"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "adroit",
        "scopeName": "source.adroit",
        "path": "./syntaxes/adroit.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Adroit configuration",
      "properties": {
        "adroit.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node && vsce package"
  }
}
