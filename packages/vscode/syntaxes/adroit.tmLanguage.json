{
  "name": "Adroit",
  "scopeName": "source.adroit",
  "fileTypes": [".adroit"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.rose",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.rose",
          "match": "\\b(else|if|then)\\b"
        },
        {
          "name": "keyword.other.rose",
          "match": "\\b(and|in|or)\\b"
        },
        {
          "name": "storage.type.rose",
          "match": "\\b(def|let|type)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "string.quoted.double.rose",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "constant.numeric.rose",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.rose",
          "match": "\\b([A-Z]\\w*)\\b"
        },
        {
          "name": "variable.other.rose",
          "match": "\\b(\\w+)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.rose",
          "match": "[\\(\\)\\[\\]\\{\\},\\.]"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.rose",
          "match": "[^\\s#\\w\"\\(\\)\\[\\]\\{\\},\\.]+"
        }
      ]
    }
  }
}
