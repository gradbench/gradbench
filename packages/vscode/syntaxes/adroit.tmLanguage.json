{
  "name": "Adroit",
  "scopeName": "source.adroit",
  "fileTypes": [".adroit"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#literals"
    },
    {
      "include": "#identifiers"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#operators"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.adroit",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.adroit",
          "match": "\\b(as|else|for|if|import|then|use)\\b"
        },
        {
          "name": "keyword.other.adroit",
          "match": "\\b(and|in|or)\\b"
        },
        {
          "name": "storage.type.adroit",
          "match": "\\b(def|index|let|type)\\b"
        }
      ]
    },
    "literals": {
      "patterns": [
        {
          "name": "string.quoted.double.adroit",
          "begin": "\"",
          "end": "\""
        },
        {
          "name": "constant.numeric.adroit",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.type.adroit",
          "match": "\\b([A-Z]\\w*)\\b"
        },
        {
          "name": "variable.other.adroit",
          "match": "\\b(\\w+)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.adroit",
          "match": "[\\(\\)\\[\\]\\{\\},\\.]"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.adroit",
          "match": "[^\\s#\\w\"\\(\\)\\[\\]\\{\\},\\.]+"
        }
      ]
    }
  }
}
